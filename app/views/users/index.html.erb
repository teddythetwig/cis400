  var oldTableName = getSelectVal(document.getElementById("oldTableName"));
  var editTableName = document.getElementById("editTableName").value;
  if(editTableName != "") {
    $('#editTableModal').modal('hide'); // hide modal on save
    if(uniqueTableName(editTableName)) {
        var table = findTable(oldTableName);
        table.get('.text')[0].setText(editTableName);
        layer.draw();
    }
    else {
      alert("Table names must be unique.  Please choose a different name for your table.");
    }
  }
}

/*
* Initializes modal to edit existing attribute
*
*/
