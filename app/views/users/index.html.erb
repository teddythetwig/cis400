function genSelectHTML(id, arr, type) {
  var ret = "";
  if(type == 0) {
    for(i=0; i<arr.length; i++) {
      ret += "\t<option value=\"" + arr[i] + "\">" + arr[i] + "</option>\n";
    }
  }
